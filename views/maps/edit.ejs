

  <% include ../partials/alertsAlt.ejs %>
  <div class="modal header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

  </div>

  <div class="modal-body">
  <form action="/maps/edit/<%= localId %>" method="post">
      <div class="form-group">
      <h4 class="modal-title" id="myModalLabel">Edit Map Name</h4>
          <input class="front-page-input label-weight" type="text" name="mapName" placeholder="Your Map Name">
        <h4 class="create-page-input">Edit Map Description</h4>
          <textarea type="text" id="create-text-area" class="label-weight"  name="description" class="form-control" placeholder="Tell Us About Your Map"></textarea>
      </div>
      <input type="submit" id="create-button" class="add-buttons create-button white-text btn btn-info" value="Make Changes">
      <a href="/maps/locations/<%= localId %>" class="add-buttons create-button white-text btn btn-info">
          Return to Map</a>
  </form>
  </div>





