<% include ../partials/header %>
<body id="create-page">
  <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
     <% if (loggedIn) { %>
          <li><a class="navbar-brand" href="#">Hello, <%= loggedIn.firstName %></a></li>
     <% } else { %>
          <a class="navbar-brand" href="/">Wayfinder</a>
    <% } %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/maps">Explore</a></li>
        <li><a href="/maps/create">Create</a></li>

      <% if (loggedIn) { %>
          <li><a href="/narratives/usermaps">My Maps</a></li>
          <li><a href="/auth/logout">Log Out</a></li>
      <% } else { %>
           <li><a href="/auth">Log In </a></li>
           <li><a href="/auth/newuser">New Account</a></li>
      <% } %>

        <li><a href="/maps/about">About</a></li>

      </ul>
      <form class="navbar-form navbar-right" role="search" action="/narratives/search" method="get">
        <div class="form-group">
          <input type="text" class="form-control normal-input" name="q" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<div class="container">
<h1 id="create-map-header"> Create your Map Below</h1>
<hr id="create-page-hr">

  <div id="container2">
    <div id="googleMap"></div>
  </div>

  <div id="container1">
  <% include ../partials/alertsAlt.ejs %>
    <form id="map-create-buttons" action="/maps" method="post">
      <div class="form-group">
        <h4>Map Name </h4>
          <input class="front-page-input label-weight" type="text" name="mapName" placeholder="Your Map Name">
        <h4 class="create-page-input">City </h4>
        <input class="front-page-input label-weight" type="text" name="city" placeholder="City Name">
        <h4 class="create-page-input">Country</h4>
        <input class="front-page-input label-weight" type="text" name="country" placeholder="Country">
        <h4 class="create-page-input">Map Description</h4>
          <textarea type="text" id="create-text-area" class="label-weight"  name="description" class="form-control" placeholder="Tell Us About Your Map"></textarea>
        <!-- <h4 id="create-page-input-last">Tags </h4>
          <input class="front-page-input label-weight" type="text" name="" placeholder="Tag Names"> -->
      </div>
      <input type="submit" id="create-button" class="add-buttons white-text btn btn-info" value="Create Your Map">
  </form>
  </div>


</div>
</body>



